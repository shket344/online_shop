= stylesheet_link_tag 'header'

.header
  .container
    .row
      .col-md-1
        .logo
          h1 Online Shop
      - if user_signed_in?
        .col-md-10
        .col-md-1
          = link_to 'My Profile', user_path(current_user.id), class: 'btn btn-outline-info btn-sm'
          = link_to 'Home', root_path, class: 'btn btn-outline-success btn-sm'
      - else
        .col-md-10
        .col-md-1
          = link_to 'Sign In', user_session_path, class: 'btn btn-success btn-sm'
